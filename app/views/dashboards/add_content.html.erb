<div class="row">
  <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card"> 
        <h5 class="card-header"><%= t(:add_content) %></a></h5>
        <div class="card-body">       
          <div class="form-group">
              <label for="title" class="col-form-label"><%= t(:title) %></label>
              <input class="form-control" type="text" id="title" ></input>
          </div>
          <div class="form-group">
              <label for="abstract" class="col-form-label"><%= t(:abstract) %></label>
              <textarea class="form-control" id="abstract" rows="3"></textarea>
          </div>
          <div class="form-group">
              <label for="content" class="col-form-label"><%= t(:content) %></label>
              <textarea class="form-control" id="content" rows="5"></textarea>
          </div>
          <div class="form-group">
            <input type="file" name="image" id="image">
          </div>
          <div class="form-group">
            <label for="categories" class="col-form-label"><%= t(:category) %></label>
            <input type="text" class="flexdatalist" id="qcategories">
            <!-- <select id="qcategories" class="form-control">              
              <% @categories.each do |category| %>
                <option value="<%= category.name %>"><%= category.name %></option>      
              <% end %>
            </select> -->
          </div>
          <div class="actions">
            <button id="add-content" type="submit" class="btn btn-primary btn-lg btn-block"><%= t(:add_content) %></button>
          </div>
        </div>
    </div>
  </div>
</div>

<% content_for :content do %>
  <%= javascript_include_tag 'Dialog' %>
  <%= javascript_include_tag 'dashboard_add_content' %>
<% end %>