
 <div class="splash-container ">
        <div class="card <%= 'rtl' if I18n.locale.to_s == 'fa' %>">
            <div class="card-header text-center"><a href="/">
              <%= image_tag 'logo.png', class: "logo-img", alt: "logo" %></a><span class="splash-description"><%= t(:login_notice) %></span></div>
            <div class="card-body">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t(:email), class: "form-control form-control-lg" %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "current-password", placeholder: t(:password), class: "form-control form-control-lg" %>
                  </div>

                  <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                        <label class="custom-control custom-checkbox">
                            <input class="custom-control-input" type="checkbox"><span class="custom-control-label"><%= t(:remember_me) %></span>
                        </label>
                    </div>
                    <!-- <div class="form-group">
                      <%= f.check_box :remember_me, class: "custom-control-input " %>
                      <%= f.label :remember_me, class: "custom-control custom-checkbox" %>
                    </div> -->
                  <% end -%>

                  <div class="actions">
                    <%= f.submit t(:login), class: "btn btn-primary btn-lg btn-block" %>
                  </div>
                <% end %>
            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="/users/sign_up" class="footer-link"><%= t(:create_account) %></a></div>
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="users/password/new" class="footer-link"><%= t(:forget_password) %></a>
                </div>
            </div>
        </div>
    </div>
