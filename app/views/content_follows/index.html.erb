<p id="notice"><%= notice %></p>

<h1>Content Follows</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_follows.each do |content_follow| %>
      <tr>
        <td><%= content_follow.article_id %></td>
        <td><%= content_follow.user_id %></td>
        <td><%= link_to 'Show', content_follow %></td>
        <td><%= link_to 'Edit', edit_content_follow_path(content_follow) %></td>
        <td><%= link_to 'Destroy', content_follow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Content Follow', new_content_follow_path %>
