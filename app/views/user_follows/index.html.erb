<p id="notice"><%= notice %></p>

<h1>User Follows</h1>

<table>
  <thead>
    <tr>
      <th>User id follow</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_follows.each do |user_follow| %>
      <tr>
        <td><%= user_follow.user_id_follow %></td>
        <td><%= user_follow.user_id %></td>
        <td><%= link_to 'Show', user_follow %></td>
        <td><%= link_to 'Edit', edit_user_follow_path(user_follow) %></td>
        <td><%= link_to 'Destroy', user_follow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

