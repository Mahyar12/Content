<p id="notice"><%= notice %></p>

<h1>Articles Categories</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles_categories.each do |articles_category| %>
      <tr>
        <td><%= articles_category.article_id %></td>
        <td><%= articles_category.category_id %></td>
        <td><%= link_to 'Show', articles_category %></td>
        <td><%= link_to 'Edit', edit_articles_category_path(articles_category) %></td>
        <td><%= link_to 'Destroy', articles_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Articles Category', new_articles_category_path %>
