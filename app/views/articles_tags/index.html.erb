<p id="notice"><%= notice %></p>

<h1>Articles Tags</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles_tags.each do |articles_tag| %>
      <tr>
        <td><%= articles_tag.article_id %></td>
        <td><%= articles_tag.tag_id %></td>
        <td><%= link_to 'Show', articles_tag %></td>
        <td><%= link_to 'Edit', edit_articles_tag_path(articles_tag) %></td>
        <td><%= link_to 'Destroy', articles_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

